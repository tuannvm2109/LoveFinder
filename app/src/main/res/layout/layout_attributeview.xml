<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_border_top"
    >

    <ImageView
        android:id="@+id/imageViewAttributeView"
        android:src="@drawable/ic_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="15dp"
        android:scaleType="fitXY" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/textViewThuocTinhAttributeView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Thuoc Tinh"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewDacDiemAttributeView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Dac diem"
            android:textColor="#000"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>